<section class="vh-100 credcontainer">
  <div>
    <h1 class="credtitle">Selamat datang kembali!</h1>
    <div class="container-fluid h-custom">
      <div class="row d-flex justify-content-center align-items-center h-80">
        <div class="col-md-9 col-lg-6 col-xl-5">
          <img
            src="/contents/travelling.svg"
            class="img-fluid"
            alt="Sample image"
          />
        </div>
        <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 credbottom">
          <form action="/login" method="post">
            <!-- Email input -->
            <div class="form-outline mb-4">
              <input
                type="email"
                id="email"
                name="email"
                class="form-control form-control-lg"
                placeholder="Masukan email"
              />
              <label class="form-label" for="email"
                >Gunakan email teregistrasi</label
              >
            </div>

            <!-- Password input -->
            <div class="form-outline mb-3">
              <input
                type="password"
                id="password"
                name="password"
                class="form-control form-control-lg"
                placeholder="Masukan password"
              />
              <label class="form-label" for="password">Password</label>
            </div>

            <div class="text-center text-lg-start mt-4 pt-2">
              <button
                type="submit"
                class="btn btn-success btn-lg"
                style="padding-left: 2.5rem; padding-right: 2.5rem"
              >
                Login
              </button>
              <p class="small fw-bold mt-2 pt-1 mb-0">
                Belum punya akun?
                <a href="/register" class="link-success">Register</a>
              </p>
            </div>
          </form>
          <button
            type="button"
            class="text-body"
            style="border: none; background-color: white"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal"
            data-bs-whatever="@mdo"
          >
            Lupa Password?
          </button>

          <div
            class="modal fade"
            id="exampleModal"
            tabindex="-1"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">
                    Kirim link reset ke email mu
                  </h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <form
                    action="/resetpass"
                    method="post"
                  >
                    <div class="mb-3">
                      <input
                        type="email"
                        class="form-control"
                        id="email2"
                        name="email2"
                        placeholder="email@valid.com"
                      />
                    </div>

                    <div class="modal-footer">
                      <button
                        type="button"
                        class="btn btn-secondary"
                        data-bs-dismiss="modal"
                      >
                        Batal
                      </button>
                      <button type="submit" class="btn btn-success">
                        Unggah
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
